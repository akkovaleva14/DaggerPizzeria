<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First layer is the background shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/grey_tint" />
        </shape>
    </item>
    <!-- Second layer is the tint color -->
    <item android:bottom="0dp" android:right="0dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_tint" />
        </shape>
    </item>
</layer-list>